<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Bundle Information -->
    <key>CFBundleDisplayName</key>
    <string>Impetus</string>
    <key>CFBundleName</key>
    <string>Impetus</string>
    <key>CFBundleIdentifier</key>
    <string>com.gerdsenai.impetus</string>
    <key>CFBundleVersion</key>
    <string>1.0.2</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0.2</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleSignature</key>
    <string>IMPL</string>
    <key>CFBundleExecutable</key>
    <string>Impetus</string>
    <key>CFBundleIconFile</key>
    <string>AppIcon</string>
    
    <!-- Application Information -->
    <key>CFBundleGetInfoString</key>
    <string>Impetus LLM Server 1.0.2, Copyright © 2024 GerdsenAI</string>
    <key>NSHumanReadableCopyright</key>
    <string>Copyright © 2024 GerdsenAI. All rights reserved.</string>
    
    <!-- System Requirements -->
    <key>LSMinimumSystemVersion</key>
    <string>13.0</string>
    <key>LSArchitecturePriority</key>
    <array>
        <string>arm64</string>
        <string>x86_64</string>
    </array>
    
    <!-- Permissions -->
    <key>NSAppleEventsUsageDescription</key>
    <string>Impetus needs to control system functions for AI model management and performance monitoring.</string>
    <key>NSSystemAdministrationUsageDescription</key>
    <string>Impetus needs administrator access to install system services and manage server processes.</string>
    <key>NSNetworkVolumesUsageDescription</key>
    <string>Impetus may need to access network volumes for model storage and sharing.</string>
    <key>NSRemovableVolumesUsageDescription</key>
    <string>Impetus may need to access external drives for model storage.</string>
    <key>NSDesktopFolderUsageDescription</key>
    <string>Impetus may need to access Desktop for model file management.</string>
    <key>NSDocumentsFolderUsageDescription</key>
    <string>Impetus may need to access Documents for configuration and log files.</string>
    <key>NSDownloadsFolderUsageDescription</key>
    <string>Impetus may need to access Downloads for model files and updates.</string>
    
    <!-- App Transport Security -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
        <key>NSExceptionDomains</key>
        <dict>
            <key>huggingface.co</key>
            <dict>
                <key>NSThirdPartyExceptionAllowsInsecureHTTPLoads</key>
                <true/>
                <key>NSThirdPartyExceptionMinimumTLSVersion</key>
                <string>TLSv1.0</string>
            </dict>
            <key>localhost</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <true/>
                <key>NSExceptionMinimumTLSVersion</key>
                <string>TLSv1.0</string>
            </dict>
        </dict>
    </dict>
    
    <!-- Background Processing -->
    <key>LSBackgroundOnly</key>
    <false/>
    <key>LSUIElement</key>
    <true/>
    
    <!-- Menu Bar Application -->
    <key>NSPrincipalClass</key>
    <string>NSApplication</string>
    <key>NSMainNibFile</key>
    <string>MainMenu</string>
    
    <!-- Application Category -->
    <key>LSApplicationCategoryType</key>
    <string>public.app-category.developer-tools</string>
    
    <!-- File Associations -->
    <key>CFBundleDocumentTypes</key>
    <array>
        <dict>
            <key>CFBundleTypeExtensions</key>
            <array>
                <string>mlx</string>
                <string>gguf</string>
            </array>
            <key>CFBundleTypeName</key>
            <string>Machine Learning Model</string>
            <key>CFBundleTypeRole</key>
            <string>Editor</string>
            <key>LSTypeIsPackage</key>
            <false/>
        </dict>
    </array>
    
    <!-- URL Schemes -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLName</key>
            <string>Impetus API</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>impetus</string>
            </array>
        </dict>
    </array>
    
    <!-- Services -->
    <key>NSServices</key>
    <array>
        <dict>
            <key>NSMenuItem</key>
            <dict>
                <key>default</key>
                <string>Process with Impetus</string>
            </dict>
            <key>NSMessage</key>
            <string>processText</string>
            <key>NSPortName</key>
            <string>Impetus</string>
            <key>NSSendTypes</key>
            <array>
                <string>NSStringPboardType</string>
            </array>
        </dict>
    </array>
    
    <!-- High Resolution Support -->
    <key>NSHighResolutionCapable</key>
    <true/>
    <key>NSSupportsAutomaticGraphicsSwitching</key>
    <true/>
    
    <!-- Appearance -->
    <key>NSRequiresAquaSystemAppearance</key>
    <false/>
    
    <!-- Hardened Runtime -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    <key>com.apple.security.network.server</key>
    <true/>
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Export Compliance -->
    <key>ITSAppUsesNonExemptEncryption</key>
    <false/>
</dict>
</plist>