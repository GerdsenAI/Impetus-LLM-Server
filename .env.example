# Environment Configuration for Impetus LLM Server
# Copy this file to .env and fill in your actual values

# Basic Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
DEBUG=false
LOG_LEVEL=INFO

# API Keys for External Services
# Get your Brave Search API key from: https://api.search.brave.com/
BRAVE_SEARCH_API_KEY=your_brave_search_api_key_here

# Optional: OpenAI API key for comparison/testing
OPENAI_API_KEY=your_openai_api_key_here

# Security Settings
SECRET_KEY=your_secret_key_here
API_AUTHENTICATION_ENABLED=false
DEFAULT_API_KEY=sk-dev-gerdsen-ai-local-development-key

# MCP Configuration
MCP_WORKSPACE_ISOLATION=true
MCP_AUTO_DETECT_WORKSPACE=true
MCP_DATABASE_PATH=~/.mcp/workspaces
MCP_CACHE_PATH=~/.mcp/shared_cache

# Puppeteer Configuration
PUPPETEER_HEADLESS=true
PUPPETEER_SANDBOX=false
PUPPETEER_SCREENSHOT_PATH=~/.mcp/screenshots

# Research Configuration
RESEARCH_CACHE_ENABLED=true
RESEARCH_CACHE_PATH=~/.mcp/research_cache
RESEARCH_CACHE_RETENTION_DAYS=30

# Performance Settings
MAX_CONCURRENT_MODELS=3
MODEL_CACHE_SIZE_GB=8
AUTO_OPTIMIZATION_ENABLED=true

# Development Settings (only used in debug mode)
FLASK_ENV=production
ENABLE_RELOADER=false
ENABLE_DEBUGGER=false

# Logging Configuration
LOG_FILE_PATH=logs/impetus_server.log
LOG_ROTATION_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Apple Silicon Optimization
ENABLE_METAL_PERFORMANCE_SHADERS=true
ENABLE_NEURAL_ENGINE=true
THERMAL_THROTTLING_ENABLED=true
DYNAMIC_MEMORY_ALLOCATION=true

# Model Directories
USER_MODELS_PATH=~/Models
SYSTEM_MODELS_PATH=/usr/local/share/impetus/models
TEMP_MODELS_PATH=/tmp/impetus_models

# WebSocket Configuration
WEBSOCKET_PING_INTERVAL=25
WEBSOCKET_PING_TIMEOUT=60
WEBSOCKET_MAX_SIZE=16777216

# CORS Configuration (for web UI)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:8080

# Database Configuration (if using external database)
# DATABASE_URL=sqlite:///~/.mcp/workspaces/main.db
# DATABASE_POOL_SIZE=5
# DATABASE_POOL_TIMEOUT=30
